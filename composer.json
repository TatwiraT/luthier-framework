{
    "name"       : "luthier/framework",
    "type"       : "library",
    "description": "Versatile PHP micro-framework for build APIs and websites quickly",
    "license"    : "MIT",
    "homepage"   : "https://luthier.ingenia.me/framework/en/",
    "authors": [
        {
            "name"    : "Anderson Salas",
            "email"   : "anderson@ingenia.me",
            "homepage": "https://ingenia.me",
            "role"    : "Lead developer"
        }
    ],
    "keywords": [
        "framework", "micro-framework", "routing", "middleware", "dependency-injection", "luthier"
    ],
    "minimum-stability": "stable",
    "require": {
        "php"                     : ">=7.1.8",
        "symfony/http-foundation" : "^4.0",
        "symfony/http-kernel"     : "^4.0",
        "symfony/routing"         : "^4.0",
        "symfony/dotenv"          : "^4.0",
        "symfony/event-dispatcher": "^4.0",
        "symfony/console"         : "^4.0",
        "pimple/pimple"           : "~3.0",
        "filp/whoops": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "support": {
        "email": "anderson@ingenia.me"
    },
    "autoload": {
        "psr-4": {
            "Luthier\\": "src/"
        }
    }
}
